<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="teacherItem"
            type="com.example.qiang_pc.newtalkpal.activity.bean.TeacherBean.DataEntity"
        />
    </data>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="@android:color/transparent"
    card:cardCornerRadius="10dp"
    card:cardElevation="3dp"
    card:cardMaxElevation="6dp"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="26px"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_teacher"
                android:layout_width="180px"
                android:layout_height="180px"
                android:scaleType="centerCrop"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:layout_marginLeft="12px"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{teacherItem.first_name}"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/teacher_textsize_big"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="from"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />

                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17px"
                        android:singleLine="true"
                        android:text="@{teacherItem.from}"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="use_language"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />

                    <TextView
                        android:id="@+id/tv_languages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17px"
                        android:singleLine="true"
                        android:text="@{teacherItem.languages}"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="teach_language"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />

                    <TextView
                        android:id="@+id/tv_teach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17px"
                        android:singleLine="true"
                        android:text="@{teacherItem.teach}"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />
                </com.zhy.autolayout.AutoLinearLayout>


            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="170px"
                android:orientation="vertical"
                >


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="location_weizhi"
                        android:drawableLeft="@mipmap/brief_loca"
                        android:drawablePadding="5dp"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17px"
                        android:text="@{teacherItem.location}"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        android:singleLine="true"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price"
                        android:drawableLeft="@mipmap/brief_hourly"
                        android:drawablePadding="5dp"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17px"
                        android:singleLine="true"
                        android:text="@{teacherItem.price}"
                        android:textColor="#02C9FC"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="speciality"
                        android:drawableLeft="@mipmap/brief_expert"
                        android:drawablePadding="5dp"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />

                    <TextView
                        android:id="@+id/tv_expert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17px"
                        android:singleLine="true"
                        android:text="@{teacherItem.skill}"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/teacher_textsize_nomarl"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <Button
                android:id="@+id/btn_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@drawable/shape_btn_bg"
                android:textColor="#ffffff"
                android:textSize="@dimen/teacher_textsize_big"
                android:text="order"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</android.support.v7.widget.CardView>
</layout>